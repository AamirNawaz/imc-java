<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">
    <!-- imc_user table -->
    <changeSet id="1" author="aamirnawaz" labels="imc_user" context="imc-apis">
        <comment>This changelog is for creating imc user table</comment>
        <createTable tableName="imc_users">
            <column name="id" type="uuid">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="text">
                <constraints nullable="true"/>
            </column>
            <column name="email" type="text">
                <constraints nullable="true" unique="true"/>
            </column>
            <column name="password" type="text"/>
            <column name="created_at" type="timestamp" defaultValueComputed="NOW()"/>
            <column name="updated_at" type="timestamp" defaultValueComputed="NOW()"/>
        </createTable>
    </changeSet>

    <!-- Role Table -->
    <changeSet id="2" author="aamirnawaz" labels="role" context="imc-apis">
        <comment>This changelog is for creating imc roles table</comment>
        <createTable tableName="imc_roles">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="text">
                <constraints nullable="true"/>
            </column>
            <column name="created_at" type="timestamp" defaultValueComputed="NOW()"/>
            <column name="updated_at" type="timestamp" defaultValueComputed="NOW()"/>
        </createTable>
    </changeSet>


    <!-- Service Table -->
    <changeSet id="3" author="aamirnawaz" labels="service" context="imc-apis">
        <createTable tableName="imc_services">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="text">
                <constraints nullable="true"/>
            </column>
            <column name="charges" type="int">
                <constraints nullable="true"/>
            </column>
            <column name="total_qty" type="int">
                <constraints nullable="true"/>
            </column>

            <column name="status" type="boolean" defaultValueBoolean="false">
                <constraints nullable="true"/>
            </column>

            <column name="created_by" type="uuid">
                <constraints nullable="true" referencedTableName="imc_users" referencedColumnNames="id"
                             foreignKeyName="fk_created_by"/>
            </column>

            <column name="created_at" type="timestamp" defaultValueComputed="NOW()"/>
            <column name="updated_at" type="timestamp" defaultValueComputed="NOW()"/>
        </createTable>
    </changeSet>

    <!-- ServiceProviderTypes Table -->
    <changeSet id="4" author="aamirnawaz" labels="service-provider-types" context="imc-apis">
        <createTable tableName="imc_sp_types">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="text">
                <constraints nullable="true"/>
            </column>
            <column name="created_at" type="timestamp" defaultValueComputed="NOW()"/>
            <column name="updated_at" type="timestamp" defaultValueComputed="NOW()"/>
        </createTable>
    </changeSet>
    <!-- User Qualification Table -->
    <changeSet id="5" author="aamirnawaz" labels="qualification" context="imc-apis">
        <createTable tableName="imc_qualifications">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="qualification" type="text">
                <constraints nullable="true"/>
            </column>
            <column name="experience" type="text">
                <constraints nullable="true"/>
            </column>
            <column name="user_id" type="uuid">
                <constraints nullable="true" referencedTableName="imc_users" referencedColumnNames="id"
                             foreignKeyName="fk_qualification_user_id"/>
            </column>
            <column name="created_at" type="timestamp" defaultValueComputed="NOW()"/>
            <column name="updated_at" type="timestamp" defaultValueComputed="NOW()"/>
        </createTable>
    </changeSet>
    <!-- User promotion Table -->
    <changeSet id="6" author="aamirnawaz" labels="promotion" context="imc-apis">
        <createTable tableName="imc_promotions">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="type" type="text">
                <constraints nullable="true"/>
            </column>
            <column name="is_sent" type="boolean" defaultValueBoolean="false">
                <constraints nullable="true"/>
            </column>
            <column name="user_id" type="uuid">
                <constraints nullable="true" referencedTableName="imc_users" referencedColumnNames="id"
                             foreignKeyName="fk_qualification_user_id"/>
            </column>
            <column name="created_at" type="timestamp" defaultValueComputed="NOW()"/>
            <column name="updated_at" type="timestamp" defaultValueComputed="NOW()"/>
        </createTable>
    </changeSet>

    <changeSet id="7" author="aamirnawaz" labels="agreement" context="imc-apis">
        <createTable tableName="imc_agreements">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="is_agreed" type="boolean" defaultValueBoolean="false">
                <constraints nullable="true"/>
            </column>
            <column name="user_id" type="uuid">
                <constraints nullable="true" referencedTableName="imc_users" referencedColumnNames="id"
                             foreignKeyName="fk_agreement_user_id"/>
            </column>
            <column name="agreed_with" type="uuid">
                <constraints nullable="true" referencedTableName="imc_users" referencedColumnNames="id"
                             foreignKeyName="fk_agreed_with_user_id"/>
            </column>

            <column name="created_at" type="timestamp" defaultValueComputed="NOW()"/>
            <column name="updated_at" type="timestamp" defaultValueComputed="NOW()"/>
        </createTable>
    </changeSet>

    <changeSet id="8" author="aamirnawaz" labels="feedback" context="imc-apis">
        <createTable tableName="imc_feedbacks">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="message" type="text">
                <constraints nullable="true"/>
            </column>
            <column name="rating" type="integer">
                <constraints nullable="true"/>
            </column>

            <column name="rated_to" type="uuid">
                <constraints nullable="true" referencedTableName="imc_users" referencedColumnNames="id"
                             foreignKeyName="fk_rated_to_user_id"/>
            </column>
            <column name="rated_by" type="uuid">
                <constraints nullable="true" referencedTableName="imc_users" referencedColumnNames="id"
                             foreignKeyName="fk_rated_by_user_id"/>
            </column>

            <column name="created_at" type="timestamp" defaultValueComputed="NOW()"/>
            <column name="updated_at" type="timestamp" defaultValueComputed="NOW()"/>
        </createTable>
    </changeSet>

    <changeSet id="9" author="aamirnawaz" labels="order" context="imc-apis">
        <createTable tableName="imc_orders">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="order_number" type="text">
                <constraints nullable="true"/>
            </column>
            <column name="order_status" type="boolean" defaultValueBoolean="false">
                <constraints nullable="true"/>
            </column>
            <column name="amount" type="integer">
                <constraints nullable="true"/>
            </column>
            <column name="is_paid" type="boolean" defaultValueBoolean="false">
                <constraints nullable="true"/>
            </column>
            <column name="is_deleted" type="boolean" defaultValueBoolean="false">
                <constraints nullable="true"/>
            </column>
            <column name="contact" type="integer">
                <constraints nullable="true"/>
            </column>
            <column name="address" type="text">
                <constraints nullable="true"/>
            </column>

            <column name="customer_id" type="uuid">
                <constraints nullable="true" referencedTableName="imc_users" referencedColumnNames="id"
                             foreignKeyName="fk_order_customer_id"/>
            </column>

            <column name="created_at" type="timestamp" defaultValueComputed="NOW()"/>
            <column name="updated_at" type="timestamp" defaultValueComputed="NOW()"/>
        </createTable>
    </changeSet>


    <!-- Add Column is_delete in user table -->
    <changeSet id="10" author="aamirnawaz" labels="imc_user" context="imc-apis">
        <addColumn tableName="imc_users">
            <column name="is_deleted" type="boolean" defaultValueBoolean="false">
                <constraints nullable="true"/>
            </column>
        </addColumn>
    </changeSet>


    <!-- Add image column in service table -->
    <changeSet id="11" author="aamirnawaz" labels="service" context="imc-apis">
        <addColumn tableName="imc_services">
            <column name="image" type="text">
                <constraints nullable="true"/>
            </column>
        </addColumn>
    </changeSet>

    <!-- Create user_roles table -->
    <changeSet id="12" author="aamirnawaz" labels="userRolesTable" context="imc-api">
        <createTable tableName="imc_user_roles">
            <column name="user_id" type="uuid">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="role_id" type="BIGINT">
                <constraints primaryKey="true" nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <!-- Add foreign key constraints -->
    <changeSet id="13" author="aamirnawaz" labels="userRolesTable" context="imc-api">
        <addForeignKeyConstraint baseTableName="imc_user_roles" baseColumnNames="user_id"
                                 constraintName="fk_user_roles_user" referencedTableName="imc_users"
                                 referencedColumnNames="id" onDelete="CASCADE" onUpdate="CASCADE"/>
        <addForeignKeyConstraint baseTableName="imc_user_roles" baseColumnNames="role_id"
                                 constraintName="fk_user_roles_role" referencedTableName="imc_roles"
                                 referencedColumnNames="id" onDelete="CASCADE" onUpdate="CASCADE"/>
    </changeSet>


    <changeSet id="14" author="aamirnawaz" labels="service_tbl_having_order_id" context="imc-api">
        <addColumn tableName="imc_services">
            <column name="order_id" type="BIGINT"/>
        </addColumn>

        <addForeignKeyConstraint baseTableName="imc_services" baseColumnNames="order_id"
                                 referencedTableName="imc_orders" referencedColumnNames="id"
                                 constraintName="fk_service_order_id" onDelete="CASCADE" onUpdate="CASCADE"/>
    </changeSet>


    <changeSet id="15" author="aamirnawaz" labels="imc_order_items" context="imc-apis">
        <createTable tableName="imc_order_items">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <column name="order_qty" type="BIGINT">
                <constraints nullable="true"/>
            </column>

            <column name="service_id" type="BIGINT">
                <constraints nullable="true" referencedTableName="imc_services" referencedColumnNames="id"
                             foreignKeyName="fk_order_items_imc_services"/>
            </column>

            <column name="order_id" type="BIGINT">
                <constraints nullable="true" referencedTableName="imc_orders" referencedColumnNames="id"
                             foreignKeyName="fk_order_id_order_items"/>
            </column>
            <column name="created_at" type="timestamp" defaultValueComputed="NOW()"/>
            <column name="updated_at" type="timestamp" defaultValueComputed="NOW()"/>
        </createTable>
    </changeSet>

    <changeSet id="16" author="aamirnawaz" labels="imc_payments" context="imc-apis">
        <createTable tableName="imc_payments">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="payment_method" type="text">
                <constraints nullable="true"/>
            </column>
            <column name="created_at" type="timestamp" defaultValueComputed="NOW()"/>
            <column name="updated_at" type="timestamp" defaultValueComputed="NOW()"/>
        </createTable>
    </changeSet>

    <changeSet id="17" author="aamirnawaz" labels="imc_orders" context="imc-apis">
        <addColumn tableName="imc_orders">
            <column name="payment_mode" type="text">
            </column>
        </addColumn>
    </changeSet>

    <!-- Create order orderitems joint table -->
    <changeSet id="18" author="aamirnawaz" labels="order_items_list" context="imc-api">
        <createTable tableName="order_items_list">
            <column name="order_id" type="BIGINT">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="order_item_id" type="BIGINT">
                <constraints primaryKey="true" nullable="false"/>
            </column>
        </createTable>
    </changeSet>

</databaseChangeLog>